extends ../layout/index



block content 

    
    div.py-10
        h1.text-2xl.my-10.font-extrabold.text-center.px-5   ALL 
            span.font-normal PRODUCTS

        div.mt-8.mx-auto.max-w-md.bg-white.py-8.px-4.shadow-xl.rounded-lg


            table
                thead 
                    tr
                        
                        th.px-8.text-center.text-lg Nombre
                        th.px-8.text-center.text-lg Price
                        th.px-8.text-center.text-lg URL
                tbody
                    each n in products
                        tr
                            td= n.title
                            td= n.price 
                            td= n.thumbnail

                
